{
   "version": "0.2.0",
   "configurations": [
     {
       "name": "Debug with GDB",
       "type": "cppdbg",
       "request": "launch",
       "program": "${workspaceFolder}/EspClient",
       "args": [],
       "stopAtEntry": false,
       "cwd": "${workspaceFolder}",
       "environment": [],
       "externalConsole": false,
       "MIMode": "gdb",
       "setupCommands": [
         {
           "description": "Enable pretty-printing for gdb",
           "text": "-enable-pretty-printing",
           "ignoreFailures": true
         }
       ],
       "preLaunchTask": "build",
       "miDebuggerPath": "gdb", // Path to your GDB executable
       "showDisplayString": true,
       "launchCompleteCommand": "exec-run",
     }
   ]
 }
 